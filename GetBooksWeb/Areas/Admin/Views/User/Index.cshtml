@using GetBooks.Models.ViewModels;
@model List<UserVM>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Product List</h2>
		</div>
		<div class="col-6 text-end">
			<a  asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> &nbsp;Create New User
			</a>
		</div>
	</div>
	<br />
	<br />
	<table id="userTable" class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th style="width:50%">E-mail</th>
				<th style="width:30%">Role</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var uvm in Model)
			{
				<tr>
					<td>@uvm.Email</td>
					<td>@uvm.Role</td>
					<td>
						<a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@uvm.Id" class="btn btn-primary" style="width:100%"><i class="bi bi-pencil-square"></i> Edit</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
