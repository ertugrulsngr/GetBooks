@model IEnumerable<Book>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row pt-4">
    @foreach (Book book in Model)
    {
        <div class="col-lg-3 col-mg-5">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card">
                        <img src="@book.ImageUrl" class="card-img-top rounded" style="width: 100%; height: 15vw; object-fit: cover;"/>
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@book.Title</p>
                                <p class="card-title h5 text-secondary">by @book.Author</p>
                            </div>
                            <div class="pl-1">
                                <p>Price <b>@book.Price.ToString("0.00")</b></p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-bookId="@book.Id" class="btn btn-primary form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>